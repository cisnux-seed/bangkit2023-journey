<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:padding="16dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/button_file_operations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="button_new,button_open,button_save,edit_title"
        app:flow_horizontalGap="@dimen/tiny_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_new"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/file_new"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_open"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/file_open"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/button_save"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/file_save"
        app:layout_constraintHorizontal_weight="1" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/tiny_margin"
        android:layout_marginBottom="@dimen/tiny_margin"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="@string/title"
        android:importantForAutofill="no"
        android:inputType="textPersonName|textNoSuggestions"
        android:padding="@dimen/tiny_margin"
        app:layout_constraintHorizontal_weight="1" />

    <EditText
        android:id="@+id/edit_file"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="0dp"
        android:importantForAccessibility="no"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/tiny_margin"
        android:background="@android:color/white"
        android:gravity="top|start"
        android:importantForAutofill="no"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="@dimen/tiny_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_file_operations"
        app:layout_constraintStart_toStartOf="@+id/button_file_operations"
        app:layout_constraintTop_toBottomOf="@+id/button_file_operations" />
</androidx.constraintlayout.widget.ConstraintLayout>